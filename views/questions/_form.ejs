<%
  const actionUrl =
    /post/i.test(method) ? "/questions" : `/questions/${question.id}`;
%>


<form action="<%= actionUrl %>" method="post">
<input type="hidden" name="_method" value="patch" />

  <div class="col-md-offset-3 col-md-6">

    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" id="title" value="<%= question.title %>">
    </div>

    <div class="form-group">
      <label class="" for="description">Description</label>
      <textarea class="form-control" type="text" name="description" id="description"><%= question.description %></textarea>
    </div>

    <input type="submit" name="submit" value="submit" class="btn btn-default pull-right">

  </div>
</form>
